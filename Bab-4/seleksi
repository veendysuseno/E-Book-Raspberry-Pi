# --------------------------------------------------
# seleksi
#
# Contoh penggunaan -a untuk melakukan seleksi
#    berdasarkan dua nilai matapelajaran
# --------------------------------------------------

echo -n "Nilai Matematika: "
read matematika

echo -n "Nilai Bahasa Inggris: "
read inggris

if [ $matematika -gt 80  -a  $inggris -gt 80 ]
then
  echo "Anda diterima"
else
  echo "Maaf, Anda belum mendapat kesempatan"
fi
